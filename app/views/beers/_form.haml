= simple_form_for(@beer, html: { class: 'form-horizontal' }) do |f|
  = f.input :manufacturer_id, collection: BeerManufacturer.order(:name), as: :select, group_method: :name,  include_blank: false 
  = f.input :name			
  = f.input :category_id, collection: BeerCategory.order(:name), as: :select, group_method: :name,  include_blank: false 	
  = f.input :country_id, collection: Country.order(:name), as: :select, group_method: :name,  include_blank: false  
  = f.input :price			
  = f.input :description			
  = f.input :archived
  = f.button :submit