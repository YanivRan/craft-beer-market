= simple_form_for(@beer, html: { class: 'form-horizontal' }) do |f|
  = f.association :beer_manufacturers, :include_blank => false, label_method: :name, value_method: :id, :input_html => {:multiple => false} 			
  = f.input :name			
  = f.association :beer_categories, :include_blank => false, label_method: :name, value_method: :id, :input_html => {:multiple => false} 
  = f.association :countries, :include_blank => false, label_method: :name, value_method: :id, :input_html => {:multiple => false} 		
  = f.input :price			
  = f.input :description			
  = f.input :archived
  = f.button :submit